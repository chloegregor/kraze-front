---
import Layout from '../layouts/Layout.astro';
import {getPage} from '../lib/api/page.js';
const page= await getPage('mentions-legales');
const page_content = page.content.slice(1);
---
<Layout titre=" KRAZE | Mentions légales" description="Consultez les mentions légales de Kraze, incluant les informations sur l'éditeur, l'hébergeur, la propriété intellectuelle et les conditions d'utilisation du site web.">
<div class="lg:mx-[5em] flex flex-col items-center">
  <h1 class="lg:mt-[2em] mb-[2em] lg:w-[45%] w-[100%] text-center">{page.content[0].titre.toUpperCase()}</h1>
  <div class="lg:w-[70%] w-[100%] flex flex-col mb-[5em]">
    {page_content.map((section) => (
      <div class="mb-[3em]">
        <h2 class="mb-[1em]">{section.titre.toUpperCase()}</h2>
        <p class="break-words justify-text">{section.texte}</p>
      </div>
    ))}
</div>
</Layout>
